<p id="notice">
  <%= notice %>
</p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
<div class="errors">
<div class="errors_count">
  <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
</div>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</div>

<%= form_with model:@book, local:true do |f| %>

  <div>
    <%= f.label :title %>
  </div>

  <div class="field">
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
  </div>

  <div class="field">
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>