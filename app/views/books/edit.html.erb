<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="errors">
<div class="errors_count">
  <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
</div>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</div>

<%= form_with model:@book, local:true do |f| %>

  <div>
    <%= f.label :title %>
  </div>

  <div class="field">
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
  </div>

  <div class="field">
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
